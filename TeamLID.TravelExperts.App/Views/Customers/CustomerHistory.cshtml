@*@model IEnumerable<TeamLID.TravelExperts.Repository.Domain.Bookings>*@
@model IEnumerable<TeamLID.TravelExperts.App.Models.BookingsModel>

@{
    ViewData["Title"] = "Booking History";
    // TODO: check if Session["login"] exist, if not, redirect back to login page.

}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid jumbotron-customer">
        <div class="container">
            <h1 class="display-4 register-greetings h1-responsive">Booking History</h1>
            <hr class="my-4">
            <p class="lead register-heading">Your Bookings</p>
        </div>
    </div>
</div>

<main>
    <div class="container-fluid">

        <div class="register-main">

            <div class="register-box">
                <div class="table-responsive-lg">
                    <table class='table table-hover'>
                        <thead>
                            <tr class="text-center">
                                <th>
                                    @Html.DisplayNameFor(model => model.BookingDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BookingNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TravelerCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TripTypeId)
                                </th>
                                <th>
                                    Base Prices
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BookingDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BookingNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TravelerCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TripTypeId)
                                    </td>
                                    <td>
                                        <ul>
                                            @foreach (var bookingDetail in item.BookingDetails)
                                            {
                                                <li>
                                                    @Html.DisplayFor(modelItem => bookingDetail.BasePrice)
                                                </li>
                                            }
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>